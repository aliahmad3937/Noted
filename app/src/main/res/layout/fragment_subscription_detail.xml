<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_pink"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:context=".ui.fragments.LoginFragment">


            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:paddingVertical="@dimen/_20dp"
                android:text="Subscription Packages"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_20dp"
                >

                <TextView
                    android:id="@+id/days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:text="28"
                    android:textColor="#FFAC7E"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center"
                    android:text="Days"
                    android:textColor="#FFC5A5"
                    android:textSize="16sp"

                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/inter_medium"
                android:padding="@dimen/_20dp"
                android:text="@string/onBoarding_text_1"
                android:textColor="#FFAC7E"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/purchase_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20dp"
                android:background="@drawable/bg_paym"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:text="34"
                android:textColor="@color/white"
                android:textSize="20sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40dp" />
        </LinearLayout>

    </ScrollView>
</layout>