<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_pink"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            tools:context=".ui.fragments.LoginFragment">


            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subscription Packages"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sp"
                android:fontFamily="@font/inter_bold"
                android:paddingVertical="@dimen/_20dp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Planing to stick around for a while?"
                android:gravity="center"
                android:textColor="#E8AD8B"
                android:textSize="12sp"
                android:fontFamily="@font/inter_medium"
                android:paddingVertical="@dimen/_20dp"
                />

            <ImageView
                android:id="@+id/imageView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/plan_1"
                android:layout_marginTop="@dimen/_20dp"
                />

            <ImageView
                android:id="@+id/imageView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:src="@drawable/plan_2" />

            <ImageView
                android:id="@+id/imageView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:src="@drawable/plan_3" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40dp"/>
        </LinearLayout>

    </ScrollView>
</layout>